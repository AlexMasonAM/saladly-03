<!DOCTYPE html>
<html>
<head>
  <title>Saladly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='container'>
  <div class='pull-right'>
    <% if current_user %>
      You are signed in as <%= current_user.email %> | <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login", login_path %> | <%= link_to "Signup", signup_path %>
    <% end %>
  </div>
  <div class='header'>
    <h1>Saladly</h1>
    The Salad Makers Friend!
    <h3><%= link_to 'Ingredients', ingredients_path %> | <%= link_to 'Employees', employees_path %></h3>
  </div>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>